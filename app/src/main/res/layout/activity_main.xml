<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlackNightLight"
    tools:context=".MainActivity"
    tools:ignore="Overdraw">

    <ImageView
        android:id="@+id/hachiman_chibi_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:contentDescription="@string/imageDesc"
        android:src="@drawable/chibi_hachiman"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/yukino_chibi_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/yukino_chibi_image"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="32dp"
        android:contentDescription="@string/imageDesc"
        android:src="@drawable/chibi_yukino"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/yui_chibi_image"
        android:layout_width="170dp"
        android:layout_height="250dp"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/imageDesc"
        android:src="@drawable/chibi_yui"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/yukino_chibi_image"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
